<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_email"
        android:inputType="textCapWords"
        android:key="example_email"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_email" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textPassword"
        android:key="example_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_password" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_age"
        android:inputType="number"
        android:key="example_age"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_age" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_sex_list_titles"
        android:entryValues="@array/pref_sex_list_values"
        android:key="sex_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sex" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_address"
        android:inputType="text"
        android:key="example_address"
        android:maxLines="2"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/pref_title_display_address" />


    <!-- LISTA.... NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->


</PreferenceScreen>
