<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_image_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.personalization.ImageDescriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_personalize_image_description_selected_image_display"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:maxHeight="400dp"
            android:background="@drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/image_button_personalize_image_description_take_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:contentDescription="@string/personalize_personalize_selected_image_display_content_description"
            android:background="@drawable/ic_menu_camera" />

        <Button
            android:id="@+id/image_button_personalize_image_description_select_image_from_galery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/personalize_image_description_photo_galery_label" />

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="16dp">

            <EditText
                android:id="@+id/edit_text_personalize_image_description_personal_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/personalize_image_description_personal_description_hint"
                android:imeActionLabel="Description"
                android:inputType="textMultiLine"
                android:maxLines="4" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>