<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MediaPreviewFragment">

    <LinearLayout
        android:id="@+id/media_preview_fragment_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/media_preview_fragment_profile_picture"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_margin="@dimen/fab_margin"
                app:civ_border_width="1dp"
                android:src="@drawable/ic_menu_camera"
                app:civ_border_color="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/media_preview_fragment_username_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:textStyle="bold"
                android:text="username"
                android:textColor="#000"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/media_preview_fragment_media_image_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_menu_camera"/>

        <TextView
            android:id="@+id/media_preview_fragment_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Media description which can be multiple line content. It depend of text length"
            android:textStyle="italic"
            android:layout_gravity="top|left"/>

        <TextView
            android:id="@+id/media_preview_fragment_media_date_added_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="dd/MM/yyyy HH:mm"
            android:textColor="#000"
            android:textSize="10sp"
            android:layout_gravity="right|bottom"/>

    </LinearLayout>

</ScrollView>