<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.reusable.SwipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_swipe_fragment_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:textAlignment="center"
            tools:text="@string/hello_blank_fragment" />

        <ImageView
            android:id="@+id/image_view_swipe_fragment_image_displayed"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginHorizontal="75dp"
            android:layout_marginVertical="16dp"
            android:contentDescription="@string/swipe_fragment_content_description"
            tools:src="@drawable/ic_menu_gallery" />

    </LinearLayout>

</FrameLayout>